<html>
  <head>
    <%= stylesheet_link_tag "layout" %>
    <%= stylesheet_link_tag "dashboard" %>
    <%= stylesheet_link_tag "deals" %>
    <%= javascript_include_tag "lib/jquery-1.7.2.min" %>
    <%= javascript_include_tag "lib/jquery.dataTables" %>
    <%= javascript_include_tag "main" %>
    <%= javascript_include_tag "deals" %>
    <%= javascript_include_tag "schemes" %>
  </head>
  <body>
    <div class='scheme-picker'>
      Scheme: <select id='schemes'>
        <option value=msp>msp</option>
        <option value=indigo>indigo</option>
        <option value=warm-grays>warm-grays</option>
      </select>

      Font: <select id='fonts'>
        <option value=times>Times</option>
        <option value=arial>arial</option>
        <option value=trebuchet>Trebuchet</option>
        <option value=verdana>Verdana</option>
        <option value=georgia>Georgia</option>
        <option value=garamond>Garamond</option>
      </select>
    </div>
    <div class='top-container'>
      <div class='logo-container'><img src='/images/logo.png' /></div>
      <div class='top-right-container'>
        <ul class='main-meta'>
          <li>Welcome Dodo</li>
          <li>Logout</li>
        </ul>
        <ul class='main-nav'>
          <a href='/dashboard'><li id='dashboard' ><span class='nav-selected'>Home</span></li></a>
          <a href='/deals'><li id='deals' ><span class=''>Deals</span></li></a>
          <a href='/brokers'><li id='brokers' ><span class=''>Brokers</span></li></a>
          <a href='/reports'><li id='reports' ><span class=''>Reports</span></li></a>
          <a href='/invoices'><li id='invoices' ><span class=''>Invoices</span></li></a>
          <a href='/profiles'><li id='profiles' ><span class=''>Profiles</span></li></a>
        </ul>
      </div>
    </div>
    <div class='main-content'>
      <%= yield %>
    </div>
  </body>
</html>

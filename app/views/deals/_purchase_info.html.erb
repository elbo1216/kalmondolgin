<div id='purchaser-info-container' class='purchaser-info-container default-container'>
  <div class='title-container'>
    <span class='title'>Purchase By</span>
  </div>
  <ul class='window-nav'>
    <li id='purchaser-search-form' class='window-nav-tab active'>Search</li>
    <li id='purchaser-new-form' class='window-nav-tab'>New</li>
  </ul>
  <div class='clear'></div>
  <div id='purchaser-new' class='new-form'>
    <ul class='form-ul'>
      <li>
        <label class='form-label required'>First Name</label>
        <input type='text' id='purchaser-first-name' class='form-control long-input' />
      </li>
      <li>
        <label class='form-label required'>Last Name</label>
        <input type='text' id='purchaser-last-name' class='form-control long-input' />
      </li>
      <li>
        <label class='form-label required'>Company</label>
        <input type='text' id='purchaser-company' class='form-control long-input' />
      </li>
      <li>
        <label class='form-label required'>Street 1</label>
        <input type='text' id='purchaser-street1' class='form-control long-input' />
      </li>
      <li>
        <label class='form-label'>Street 2</label>
        <input type='text' id='purchaser-street2' class='form-control long-input' />
      </li>
      <li>
        <label class='form-label required'>City</label>
        <input type='text' id='purchaser-city' class='form-control medium-input' />
      </li>
      <li>
        <label class='form-label required'>State</label>
        <span id='purchaser-state-container' class='input-group-btn'></span>
        <div class='clear'></div>
      </li>
      <li>
        <label class='form-label required'>Zip</label>
        <input type='text' id='purchaser-zip' class='form-control medium-input' />
      </li>
      <li>
        <label class='form-label'>Country</label>
        <span id='purchaser-country-container' class='input-group-btn'></span>
        <div class='clear'></div>
      </li>
      <li>
        <label class='form-label required'>Attention</label>
        <input type='text' id='purchaser-attention-new' class='form-control long-input' />
      </li>
      <li>
        <label class='customer-form-submit'><button id='purchaser-principal-link' class='btn btn-default btn-xs'>Add Principal</button>
      </li>
    </ul>
    <div id='purchaser-principal-form' class='principal-form'></div>
    <div class='clear'></div>
  </div>
  <div id='purchaser-search' class='customer-search'>
    <ul class='form-ul'>
      <li>
        <span class='customer-search-label'>Name:</span>
        <input id='purchaser-search-text' class='form-control customer-search-input'/>
        <button id='purchaser-search-button' class='btn btn-primary btn-xs'>Search</button>
      </li>
    </ul>
    <div id='purchaser-selected-customer' class='selected-container'>
      <h3>Selected Billing Customer</h3>
      <input type='hidden' value='' id='purchaser-customer-id' />
      <ul class='selected-info'>
        <li><span id='purchaser-selected-first-name'></span> <span id='purchaser-selected-last-name'></span></li>
        <li id='purchaser-selected-company'></li>
        <li id='purchaser-selected-street1'></li>
        <li id='purchaser-selected-street2'></li>
        <li>
          <span id='purchaser-selected-city'></span>
          <span id='purchaser-selected-state'></span>
          <span id='purchaser-selected-zip'></span>
        </li>
        <li id='purchaser-selected-country'></li>
      </ul>
      <div class='form-ul selected-form-ul'>
        <label class='selected-label'>Attention:</label><input type='text' id='purchaser-attention-search' class='form-control selected-input long-input'></div>
      <div class='clear'></div>
      <div id='purchaser-selected-principal-form' class='principal-form'></div>
      <div class='clear'></div>
      <button id='purchaser-selected-principal-link' class='btn btn-default btn-xs principal-button'>Add Principal</button>
    </div>
    <div class='search-results'>
      <img id='purchaser-search-wait' class='search-wait' src='/images/ajax-loader.gif' />
      <table id='purchaser-search-results-table'>
        <thead>
          <tr class='search-results-header'>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Zip</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
